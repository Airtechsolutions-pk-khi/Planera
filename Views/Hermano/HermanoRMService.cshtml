        </div>
    </div>
    <div class="bg-newsletter py-5">
        <div class="container">
            <div class="row justify-content-center "> 
                <h4 class="text-newsletter text-center text-black newsletter" data-translate="0nws1">Subscribe Our <span><br />Newsletter</span></h4>
                <div class="col-lg-6" style="padding-top:5px;">

                    <div class="input-group mb-3">
                        @if (HttpContext.Current.Request.Cookies["lang"].Value == "en")
                        {
                            <input type="email" class="form-control" placeholder="Enter your email" style="background-color:white;border-top-left-radius: 10px;border-bottom-left-radius: 10px;border:none;height:50px;">
                        }
                        else
                        {
                            <input dir="rtl" type="email" class="form-control" placeholder="أدخل بريدك الإلكتروني" style="background-color:white;border-top-left-radius: 10px;border-bottom-left-radius: 10px;border:none;height:50px;">
                        }
                        <div class="input-group-append">
                            <button type="submit" style="background-color:#275935;margin:0; color:white;border-top-right-radius: 10px;border-bottom-right-radius: 10px;" data-translate="000co30">Submit</button>
                        </div>

                    </div>
                </div>
