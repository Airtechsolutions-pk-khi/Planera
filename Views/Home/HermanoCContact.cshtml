                                                    <input placeholder="Your Contact" type="text" name="phone" id="phone" size="40" aria-required="true" aria-invalid="false" />
                                                </div>
                                                <div class="column one">
                                                    <textarea placeholder="Message" name="message" id="message" style="width:100%;" rows="10" aria-invalid="false"></textarea>
                                                </div>
                                                <div class="column one">
                                                    <input type="button" value="Submit" id="submit" onClick="SendEmail();">
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<link href="~/assets/css/sweetalert.css" rel="stylesheet" />
<script src="~/assets/plugins/sweetalert.min.js"></script>
<script>
      function SendEmail() {
            var dataType = 'application/json; charset=utf-8';
            var obj = {
                "Name": $('#name').val(),
                "Email": $('#email').val(),
                "Phone": $('#phone').val(),
                "Subject": $('#subject').val(),
                "Message": $('#message').val()

            }
            $.ajax({
                type: 'POST',
                url: '@Url.Action("SendEmailAdminHermano", "Email")',
                dataType: 'json',
                contentType: dataType,
                data: JSON.stringify(obj),
                success: function (result) {
                    if (result.Success == true) {

                        swal({
                            title: "We have received you query, our team will get back to you soon!",
                            //text: "",
                            type: "success"
                        });
                        ClearFields();
                    }
                    else {
                        //alert("Error Occured While Sending an Email")
                        swal({
                            title: "Error !",
                            text: "Problem Occured! Kindly Call Us For Assistance",
                            type: "error",
                            html: true,
                            showCancelButton: false,
                            confirmButtonColor: "#DD6B55",
                            confirmButtonText: "Ok",
                            closeOnConfirm: false,
                        });
                        ClearFields()
                    }
                }
            });

        }

        function ClearFields() {
            $('#name').val('');
            $('#email').val('');
            $('#subject').val('');
            $('#message').val('');
        }
</script>
<script>
    jQuery(document).ready(function () {
        jQuery('#contactpage > a > span').css('border-bottom', '3px solid white');
    })
</script>