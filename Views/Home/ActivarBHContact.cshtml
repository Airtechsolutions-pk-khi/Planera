@{
    ViewBag.Title = "ActivarBHContact";
    Layout = "~/Views/Shared/_LayoutActivarBAH.cshtml";
}
<style>
    .flv_sections_53 {
        padding-top: 280px;
        padding-bottom: 179px;
        background-color: #cfd5d1;
    }
</style>
<div class="section full-width center dark flv_sections_53" style="background-image: url(../../assets/ActivarBH/images/contact-us-header.jpg);background-size: cover;background-repeat: no-repeat;" data-stellar-background-ratio="0.5">
    <div class="section_wrapper clearfix">
        <div class="items_group clearfix"></div>
        <h1 class="mobView">
            CONTACT US
        </h1>
    </div>
</div>
<div id="Content">
    <div class="content_wrapper clearfix contactbox">
        <div class="sections_group">
            <div class="entry-content">
                <div class="section mcb-section" style="padding-top: 125px; padding-bottom: 55px; background-image: url('../../assets/ActivarBH/images/-e-Rectangle 11 copy 3.png'); background-repeat: no-repeat; background-position: center; background-size: cover; ">
                    <div class="section_wrapper mcb-section-inner">
                        <div class="wrap mcb-wrap one valign-top clearfix">
                            <div class="mcb-wrap-inner">
                                <div class="column mcb-column four-fifth column_column">
                                    <div class="column_attr clearfix">
                                        <h3>Mandarine Business Center</h3>
                                        <h3>Kingdom of Bahrain</h3>
                                        <hr class="no_line" style="margin: 0 auto 20px;">
                                        <p>
                                            <i class="icon-mail"></i><a href="mailto:info@activarbh.com" style="text-decoration:none; color:#fff;">info@activarbh.com</a> &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;<i class="icon-call"></i> <a href="tel:97317004006">+973 17004006</a> &nbsp; &nbsp; &nbsp;&nbsp; &nbsp;<i class="icon-instagram"></i> <a href="https://instagram.com/activar.bahrain/" target="_blank">Activar.bahrain</a>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="section mcb-section" style="padding-top:75px;padding-bottom:90px;background-color:#fff">
                    <div class="section_wrapper mcb-section-inner">
                        <div class="wrap mcb-wrap one-second valign-top clearfix" style="padding:0 2%">
                            <div class="mcb-wrap-inner">
                                <div class="column mcb-column one column_column">
                                    <div class="column_attr clearfix">
                                        <h3 style="color:black"><b>Get In Touch</b></h3>
                                        <hr class="no_line" style="margin: 0 auto 20px;">
                                        <div id="contactWrapper">
                                            <form id="contactform">
                                                <!-- One Second (1/2) Column -->
                                                <div class="column one-second">
                                                    <input placeholder="Your name" type="text" name="Name" id="Name" size="40" aria-required="true" aria-invalid="false" style="background-color: #eff0f0" />
                                                </div>
                                                <!-- One Second (1/2) Column -->
                                                <div class="column one-second">
                                                    <input placeholder="Your e-mail" type="email" name="Email" id="Email" size="40" aria-required="true" aria-invalid="false" style="background-color: #eff0f0" />
                                                </div>
                                                <div class="column one">
                                                    <input placeholder="Subject" type="text" name="Subject" id="Subject" size="40" aria-invalid="false" style="background-color: #eff0f0" />
                                                </div>
                                                <div class="column one">
                                                    <textarea placeholder="Message" name="Message" id="Message" style="width: 100%; background-color: #eff0f0 " rows="10" aria-invalid="false"></textarea>
                                                </div>
                                                <div class="column one">
                                                    <input type="button" value="Send A Message" id="submit" onClick="SendEmail();" style="background-color: #e4b37e">
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="wrap mcb-wrap one-second valign-top move-up clearfix" style="padding:0 2%;margin-top:-168px" data-mobile="no-up">
                            <div class="mcb-wrap-inner">
                                <div class="column mcb-column one column_image">
                                    <div class="image_frame image_item no_link scale-with-grid no_border">
                                        <div class="image_wrapper">
                                            <img class="scale-with-grid" src="~/assets/ActivarBH/images/-e-map.png">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
      function SendEmail() {
            var dataType = 'application/json; charset=utf-8';
            var obj = {
                "Name": $('#Name').val(),
                "Email": $('#Email').val(),
                "Subject": $('#Subject').val(),
                "Message": $('#Message').val(),
            }
            $.ajax({
                type: 'POST',
                url: '@Url.Action("SendEmailToAdmin", "Home")',
                dataType: 'json',
                contentType: dataType,
                data: JSON.stringify(obj),
                success: function (result) {
                if (result.Success == true) {
                $("#myModal").modal({ show: false });
                //alert("Email Has been Sent")
                swal({
                title: "We have received you query, our team will get back to you soon!",
                //text: "",
                type: "success"
                });
                ClearFields()
                }
                else {
                //alert("Error Occured While Sending an Email")
                swal({
                title: "Error !",
                text: "Error Occured While Sending an Email",
                type: "error",
                html: true,
                showCancelButton: false,
                confirmButtonColor: "#DD6B55",
                confirmButtonText: "Ok",
                closeOnConfirm: false,
                });
                ClearFields()
                }
                }
                });
                }
                function ClearFields() {
                $('#Name').val('');
                $('#Email').val('');
                $('#Subject').val('');
                $('#Message').val('');
                }
</script>