
@{
    ViewBag.Title = "ContractingContact";
    Layout = "~/Views/Shared/_LayoutConstruction.cshtml";
}

<div id="Content">
    <div class="content_wrapper clearfix">
        <div class="sections_group">
            <div class="entry-content">
                <div class="section mcb-section full-width no-margin-h no-margin-v " style="padding-top:0px; padding-bottom:0px;">
                    <div class="section_wrapper mcb-section-inner">
                        <div class="wrap mcb-wrap one  valign-top clearfix">
                            <div class="mcb-wrap-inner">
                                <div class="column mcb-column one column_image">
                                    <div class="image_frame image_item no_link scale-with-grid aligncenter no_border">
                                        <div class="image_wrapper">
                                            <img class="scale-with-grid" src="~/assets/ImagesPlaneraConstruction/bgcontact.png" width="1920" height="520" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="section mcb-section" style="padding-top:0px; padding-bottom:80px;">
                    <div class="section_wrapper mcb-section-inner">
                        <div class="wrap mcb-wrap one box-shadow valign-top clearfix" style="padding:40px 40px 0; background-color:#fff; margin-top:-50px">
                            <div class="mcb-wrap-inner">
                                <div class="column mcb-column one-second column_column">
                                    <div class="column_attr clearfix">
                                        <h4 style="color:#056b39;">Are you ready to upgrade</h4>
                                        <h4>your house with our help?</h4>

                                    </div>
                                </div>
                                <div class="column mcb-column one-second column_column">
                                    <div class="column_attr clearfix">
                                        <h3 style="font-size:20px;">
                                            <img src="~/assets/ImagesPlaneraConstruction/instaicon.png" style="width:30px;" /> &nbsp; &nbsp;
                                            <span style="padding-bottom:10px;"> /Hermano.landscaping</span>
                                            <br>
                                            <img src="~/assets/ImagesPlaneraConstruction/emailicon.png" style="width:30px;" /> &nbsp; &nbsp;
                                            <span>hermano@planerabh.com</span>
                                        </h3>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="section mcb-section" style="padding-top:0px; padding-bottom:40px;">
                    <div class="section_wrapper mcb-section-inner">
                        <div class="wrap mcb-wrap one-third  valign-top clearfix" style="padding:20px 5% 0 0">
                            <div class="mcb-wrap-inner">
                                <div class="column mcb-column one column_column">
                                    <div class="column_attr clearfix">
                                        <h4>Connect With Us</h4>
                                        <p>
                                            Want to chat?
                                        </p>
                                        <p>
                                             We’d love to hear from you! Get in touch with our Customer Success Team to inquire about services, projects, rates, or just say hello.
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="wrap mcb-wrap two-third  valign-top clearfix">
                            <div class="mcb-wrap-inner">
                                <div class="column mcb-column one column_map">

                                    <div class="google-map-wrapper no_border">
                                        <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d14314.83719313858!2d50.5347584!3d26.2386336!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x264bc01fa2bf4ca0!2sPlanera%20Group!5e0!3m2!1sen!2ssa!4v1649192418211!5m2!1sen!2ssa" width="100%" height="400px" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="section mcb-section" style="padding-top:0px; padding-bottom:90px;">
                    <div class="section_wrapper mcb-section-inner">
                        <div class="wrap mcb-wrap one box-shadow valign-top clearfix" style="padding:40px 40px 0; background-color:#fff">
                            <div class="mcb-wrap-inner">
                                <div class="column mcb-column one column_column">
                                    <div class="column_attr clearfix align_center">
                                        <h3>Send us a message</h3>
                                        <hr class="no_line" style="margin: 0 auto 15px;" />
                                        <div id="contactWrapper">
                                            <form id="contactform">
                                                <div class="column one-second">
                                                    <input placeholder="Your name" type="text" name="name" id="name" size="40" aria-required="true" aria-invalid="false" />
                                                </div>
                                                <div class="column one-second">
                                                    <input placeholder="Your e-mail" type="email" name="email" id="email" size="40" aria-required="true" aria-invalid="false" />
                                                </div>
                                                <div class="column one">
                                                    <input placeholder="Subject" type="text" name="subject" id="subject" size="40" aria-invalid="false" />
                                                </div>
                                                <div class="column one">
                                                    <textarea placeholder="Message" name="message" id="message" style="width:100%;" rows="10" aria-invalid="false"></textarea>
                                                </div>
                                                <div class="column one">
                                                    <input type="button" value="Submit" id="submit"   onClick="SendEmail();" >
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<script src="~/assets/js/jquery-3.6.0.min.js"></script>
<script src="~/assets/plugins/sweetalert.min.js"></script>
<script>
      function SendEmail() {

             debugger
            var dataType = 'application/json; charset=utf-8';
            var obj = {
                "Name": $('#name').val(),
                "Email": $('#email').val(),
                "Subject": $('#subject').val(),
                "Message": $('#message').val()

            }
            $.ajax({
                type: 'POST',
                url: '@Url.Action("SendEmailToAdmin", "Home")',
                dataType: 'json',
                contentType: dataType,
                data: JSON.stringify(obj),
                success: function (result) {
                    if (result.Success == true) {

                        //alert("Email Has been Sent")

                        swal({
                            title: "We have received you query, our team will get back to you soon!",
                            //text: "",
                            type: "success"
                        });
                        ClearFields()
                    }
                    else {
                        //alert("Error Occured While Sending an Email")
                        swal({
                            title: "Error !",
                            text: "Error Occured While Sending an Email",
                            type: "error",
                            html: true,
                            showCancelButton: false,
                            confirmButtonColor: "#DD6B55",
                            confirmButtonText: "Ok",
                            closeOnConfirm: false,
                        });
                        ClearFields()
                    }
                }
            });

        }

        function ClearFields() {
            $('#name').val('');
            $('#email').val('');
            $('#subject').val('');
            $('#message').val('');
        }
</script>
